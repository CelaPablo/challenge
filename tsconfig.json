{
  "compilerOptions": {
    "target": "es6",                                  
    "lib": ["es2015", "dom"],
    "module": "commonjs",
    "rootDir": "src",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
  }
}
